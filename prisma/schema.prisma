datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Document {
  id        String   @id @default(uuid())
  title     String
  content   String
  createdAt DateTime @default(now())

  summary   Summary?
  qaPairs   QaPair[]
}

model Summary {
  id         String   @id @default(uuid())
  text       String
  createdAt  DateTime @default(now())

  document   Document @relation(fields: [documentId], references: [id])
  documentId String   @unique
}

model QaPair {
  id         String   @id @default(uuid())
  question   String
  answer     String
  createdAt  DateTime @default(now())

  document   Document @relation(fields: [documentId], references: [id])
  documentId String
}
